type Query {
  user: User!
}

type User {
  id: ID!
  name: String!
  email: String!
  boards: BoardConnection!
  board: Board!
}

type BoardConnection {
  edges: [BoardEdges]!
}

type BoardEdges {
  cursor: String!
  node: Board!
}

type Board {
  id: ID!
  issues: IssueConnection!
  issue: Issue!
}

type IssueConnection {
  edges: [IssueEdges]!
}

type IssueEdges {
  cursor: String!
  node: Issue!
}

type Issue {
  id: ID!
  name: String!
  description: String
}
